{
  "name": "mkronosphere",
  "version": "1.0.0",
  "description": "MKronoSphere - A TypeScript-based integration framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,md,json}\"",
    "prepare": "husky install",
    "docs:build": "mkdocs build",
    "docs:serve": "mkdocs serve",
    "dev": "tsc -w",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@types/node": "^20.11.17",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MKWorldWide/MKronoSphere.git"
  },
  "keywords": [
    "typescript",
    "integration",
    "framework",
    "temporal",
    "gamedin",
    "divina-l3"
  ],
  "author": "MK Worldwide",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MKWorldWide/MKronoSphere/issues"
  },
  "homepage": "https://github.com/MKWorldWide/MKronoSphere#readme",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
