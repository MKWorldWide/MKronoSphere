{
  "name": "mkronosphere",
  "version": "1.0.0",
  "description": "MKronoSphere - A powerful integration framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "lint": "eslint 'src/**/*.ts' '**/*.ts' --fix",
    "format": "prettier --write '**/*.{ts,js,json,md}'",
    "docs:build": "mkdocs build",
    "docs:serve": "mkdocs serve",
    "dev": "tsc -w",
    "clean": "rimraf dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "lint-staged": "^15.0.0",
    "prettier": "^2.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MKWorldWide/MKronoSphere.git"
  },
  "keywords": [
    "integration",
    "framework",
    "typescript",
    "nodejs"
  ],
  "author": "MK Worldwide",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MKWorldWide/MKronoSphere/issues"
  },
  "homepage": "https://github.com/MKWorldWide/MKronoSphere#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
